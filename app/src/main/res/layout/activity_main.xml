<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ccc7c7"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Remote Srvice (Message)" />

        <Button
            android:id="@+id/btnBind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定" />

        <Button
            android:id="@+id/btnUnbind1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ccc7c7"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Remote Srvice (aidl)" />

        <Button
            android:id="@+id/btnBind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定" />

        <Button
            android:id="@+id/btnUnbind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ccc7c7"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Local Srvice (Bind Service)" />

        <Button
            android:id="@+id/btnBind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定" />

        <Button
            android:id="@+id/btnUnbind3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="33dp"
        android:background="#ccc7c7"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Local Srvice (Start Service)" />

        <Button
            android:id="@+id/btnBind4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <Button
            android:id="@+id/btnUnbind4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignTop="@+id/linearLayout3"
        android:background="#ccc7c7"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Intent Service" />

        <Button
            android:id="@+id/btnBind5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <Button
            android:id="@+id/btnUnbind5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop" />

        <Button
            android:id="@+id/btnBind6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定" />

        <Button
            android:id="@+id/btnUnbind6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/linearLayout5"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="20dp"
        android:background="#ff000000"
        android:padding="5dp"
        android:text="New Text"
        android:textColor="#ffffffff" />
</RelativeLayout>
